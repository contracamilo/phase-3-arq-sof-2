{
  "name": "phase-3-arq-sof-2-monorepo",
  "version": "1.0.0",
  "description": "SOA Microservices - Reminders, Auth, and Notifications",
  "private": true,
  "scripts": {
    "install:all": "npm install && npm run install:reminder && npm run install:auth && npm run install:notification",
    "install:reminder": "cd services/reminder-service && npm install",
    "install:auth": "cd services/auth-service && npm install",
    "install:notification": "cd services/notification-service && npm install",
    
    "dev:reminder": "cd services/reminder-service && npm run dev",
    "dev:auth": "cd services/auth-service && npm run dev",
    "dev:notification": "cd services/notification-service && npm run dev",
    
    "build:all": "npm run build:reminder && npm run build:auth && npm run build:notification",
    "build:reminder": "cd services/reminder-service && npm run build",
    "build:auth": "cd services/auth-service && npm run build",
    "build:notification": "cd services/notification-service && npm run build",
    
    "test:all": "npm run test:reminder && npm run test:auth && npm run test:notification",
    "test:reminder": "cd services/reminder-service && npm test",
    "test:auth": "cd services/auth-service && npm test",
    "test:notification": "cd services/notification-service && npm test",
    
    "docker:up": "docker-compose -f infrastructure/docker/docker-compose.yml up",
    "docker:up:build": "docker-compose -f infrastructure/docker/docker-compose.yml up --build",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f infrastructure/docker/docker-compose.yml logs -f",
    "docker:clean": "docker-compose -f infrastructure/docker/docker-compose.yml down -v",
    
    "lint:all": "npm run lint:reminder && npm run lint:auth",
    "lint:reminder": "cd services/reminder-service && npm run lint",
    "lint:auth": "cd services/auth-service && npm run lint",
    
    "format:all": "prettier --write \"services/**/src/**/*.{ts,js,json}\"",
    
    "db:migrate": "cd services/reminder-service && npm run db:migrate",
    "db:seed": "cd services/reminder-service && npm run db:seed"
  },
  "keywords": [
    "microservices",
    "SOA",
    "reminders",
    "auth",
    "notifications",
    "typescript",
    "express",
    "postgresql",
    "rabbitmq",
    "camunda"
  ],
  "author": "Universidad - Phase 3 SOA Project",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "workspaces": [
    "services/reminder-service",
    "services/auth-service",
    "services/notification-service"
  ]
}
