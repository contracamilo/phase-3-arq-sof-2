# Application
NODE_ENV=development
PORT=3000
SERVICE_NAME=reminders-service

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=reminders_db
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/reminders_db

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_EXCHANGE=reminders.events
RABBITMQ_QUEUE=reminders.queue
RABBITMQ_DLX=reminders.dlx
RABBITMQ_DLQ=reminders.dlq

# Firebase Cloud Messaging (FCM) - Choose ONE option below

## Option 1: Use Service Account JSON File (Recommended for Development)
GOOGLE_APPLICATION_CREDENTIALS=./notification-service/firebase-service-account.json

## Option 2: Use Individual Environment Variables (Recommended for Production)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Camunda 8 (Zeebe)
ZEEBE_GATEWAY_ADDRESS=localhost:26500
CAMUNDA_CLOUD_CLIENT_ID=your-client-id
CAMUNDA_CLOUD_CLIENT_SECRET=your-client-secret
CAMUNDA_CLOUD_CLUSTER_ID=your-cluster-id

# OpenTelemetry
OTEL_SERVICE_NAME=reminders-service
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_TRACES_SAMPLER=always_on
OTEL_LOG_LEVEL=info

# Jaeger (Tracing)
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Prometheus (Metrics)
PROMETHEUS_PORT=9090

# WSO2 API Manager (Optional)
WSO2_API_MANAGER_URL=https://api.manager.example.com
WSO2_GATEWAY_URL=https://gateway.example.com
WSO2_TOKEN_ENDPOINT=https://api.manager.example.com/oauth2/token
WSO2_CLIENT_ID=your-client-id
WSO2_CLIENT_SECRET=your-client-secret

# Apache Camel Integration (Optional)
CAMEL_LMS_WEBHOOK_URL=http://localhost:8080/webhooks/lms
CAMEL_CALENDAR_WEBHOOK_URL=http://localhost:8080/webhooks/calendar

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
